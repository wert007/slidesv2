slide lol:
    padding = padding(5%);
    
    let r = rect(100%, 100%);
    r.background = red;

    let leftTop = rect(50px, 50px);
    leftTop.background = green;
    leftTop.orientation = Orientation.LeftTop;

    let leftBottom = rect(50px, 50px);
    leftBottom.background = green;
    leftBottom.orientation = Orientation.LeftBottom;

    let rightTop = rect(50px, 50px);
    rightTop.background = green;
    rightTop.orientation = Orientation.RightTop;

    let rightBottom = rect(50px, 50px);
    rightBottom.background = green;
    rightBottom.orientation = Orientation.RightBottom;
endslide